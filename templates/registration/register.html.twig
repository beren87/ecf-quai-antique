{% extends 'base.html.twig' %}

{% block title %}Inscription - Quai Antique{% endblock %}

{% block body %}
<div class="border-bottom"></div>
<div class="container"> 
            <div class="text-success text-center fst-italic mt-3 mb-3">
            {# Gagner du temps lors de vos prochaines réservations en créant votre compte`` #}
            </div>
    <div class="row">
        <div class="col"></div>
        <div class="col">
        <h1 class="mb-3 text-center container--form-fonts mt-3 text-primary">Inscription</h1>

            {{ form_start(registrationForm) }} 

                <div class="container--form-fonts text-primary">Nom</div>
                {{ form_row(registrationForm.lastname) }}
                <div class="container--form-fonts text-primary">Prénom</div>
                {{ form_row(registrationForm.firstname) }}
                <div class="container--form-fonts text-primary">Email</div>
                {{ form_row(registrationForm.email) }}
                <div class="container--form-fonts text-primary">Mot de passe</div>
                {{ form_row(registrationForm.plainPassword, {label: false}) }}
                <div class="container--form-fonts text-primary">Adresse</div>
                {{ form_row(registrationForm.address) }}
                <div class="container--form-fonts text-primary">Code postal</div>
                {{ form_row(registrationForm.zipcode) }}
                <div class="container--form-fonts text-primary">Ville</div>
                {{ form_row(registrationForm.city) }}
                 <div class="text-success text-center fst-italic mt-3 mb-3">
                Veuillez compléter les champs suivant pour pré-remplir vos prochaines réservations</div> 
                <div class="container--form-fonts text-primary">Nombre d'invité(e)s</div>
                <div class="container--form-allergy text-primary fst-italic">* minimum 2 / maximum 8 personnes</div>
                {{ form_row(registrationForm.nbGuests) }}
                <div class="container--form-fonts text-primary">En cas d'allergies, veuillez le précisez</div>
                {{ form_row(registrationForm.allergiesMentioned) }}
                <div class="container--form-allergy text-primary fst-italic">* Si aucune allergies, veuillez écrire : aucune</div>

                <div class="container--form-fonts text-primary">Accepter les conditions d'utilisation {{ form_row(registrationForm.agreeTerms) }}</div>
                
                <button type="submit" class="mt-3 w-100 login--btn-style mb-2 text-secondary">S'INSCRIRE</button>
            {{ form_end(registrationForm) }}
        
        </div>
        <div class="col"></div>
    </div>  

    <div class="row mt-3 mb-5">
        <div class="col"></div>
        <div class="col text-center container--form-fonts text-primary">Déjà un compte ? <span class="container--form-fonts">
        <a href="{{ path('app_login')}}" class="text-secondary text-decoration-none">
        Connectez-vous</a>
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-chevron-double-right dishe-title_icon" viewBox="0 0 16 16">
        <path fill-rule="evenodd" d="M3.646 1.646a.5.5 0 0 1 .708 0l6 6a.5.5 0 0 1 0 .708l-6 6a.5.5 0 0 1-.708-.708L9.293 8 3.646 2.354a.5.5 0 0 1 0-.708z"/>
        <path fill-rule="evenodd" d="M7.646 1.646a.5.5 0 0 1 .708 0l6 6a.5.5 0 0 1 0 .708l-6 6a.5.5 0 0 1-.708-.708L13.293 8 7.646 2.354a.5.5 0 0 1 0-.708z"/></svg>
        </span></div>
        <div class="col"></div>
    </div>

</div>
{% endblock %}
