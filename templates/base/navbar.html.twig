<header>
    <!--Start Logo--> 
    <div class="container-fluid header-navbar_logo py-2"> 
    <a class="text-secondary text-decoration-none" href="{{path('app_home')}}">Quai Antique</a>
    </div>
    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
    <div class="text-end text-secondary pe-3 welcome-text_nav">Bienvenue {{ app.user.lastname}} {{ app.user.firstname}}</div>
    {% endif %}
    <!--End Logo-->

    <!--Start navbar--> 
    <nav class="navbar navbar-expand-lg">
        <div class="container-fluid header-navbar_menus p-2">
            <!--collapse btn-->
            <button class="navbar-toggler " type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
                </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <!--collapse btn-->
            <div class="header-navbar_list mx-auto">
                <ul class="navbar-nav">
                    <li class="nav-item ms-5">
                        <a class="nav-link header-navbar_hover" aria-current="page" href="{{ path('app_dishes')}}">La carte</a>
                    </li>
                    <li class="nav-item ms-5">
                        <a class="nav-link header-navbar_hover" href="{{ path('app_menus')}}">Nos menus</a>
                    </li>
                    <li class="nav-item ms-5">
                        <a class="nav-link header-navbar_hover" href="{{ path('app_galeries')}}">Galeries</a>
                    </li>
                    <li class="nav-item ms-5">
                        <a class="nav-link header-navbar_hover" href="{{ path('app_chef')}}">Le Chef</a>
                    </li>
                    <li class="nav-item ms-5">
                        <a class="nav-link header-navbar_hover" href="{{ path('app_brigades')}}">La brigade</a>
                    </li>
                </ul>
                </div>
            </div>
            <!--login & book-->
            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
        {% if is_granted('ROLE_ADMIN') %} 
          <a href="{{ path('admin')}}"><div class="btn_design me-md-2 ">Administration</div></a>
          <a href="{{ path('app_logout')}}"><div class="btn_design me-md-2">Se déconnecter</div></a>
          <a href="{{ path('app_reservations')}}" class="text-decoration-none"><div class="me-md-2 btn_resa">Réserver</div></a>      
        {% elseif is_granted('ROLE_USER') %}
            <a href="{{ path('app_account_users')}}"><div class="btn_design me-md-2 ">Vos réservations</div></a>
          <a href="{{ path('app_logout')}}"><div class="btn_design me-md-2">Se déconnecter</div></a>
          <a href="{{ path('app_reservations')}}" class="text-decoration-none"><div class="me-md-2 btn_resa">Réserver</div></a>      
        {% else %}
          <a href="{{ path('app_register')}}"><div class="btn_design me-md-2">S'inscrire</div></a>
          <a href="{{ path('app_login')}}"><div class="btn_design me-md-2">Se connecter</div></a>
          <a href="{{ path('app_reservations')}}" class="text-decoration-none"><div class="me-md-2 btn_resa">Réserver</div></a>      
        {% endif %}
        </div>
            <!--login & book-->
        </div>
    </nav>
    <!--End navbar-->
</header>