<header>
    <!--Start Logo-->  
    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
    <div class="header--menu-warning text-center text-light">
    ATTENTION! Ce site est uniquement réalisé pour un examen, le restaurant et son adresse sont fictives 
    et vos réservations ne seront pas prise en compte si vous souhaitez manger au Quai Antique.</div>
    {% endif %} 
    <div class="header--menu-logo container-fluid py-2">  
    <a class="text-secondary text-decoration-none" href="{{path('app_home')}}">Quai Antique</a>
    </div>
    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
    <div class="header--menu-name text-end text-secondary pe-3">Bienvenue {{ app.user.lastname}} {{ app.user.firstname}}</div>
    {% endif %}
    <!--End Logo-->

    <!--Start navbar--> 
    <nav class="navbar navbar-expand-lg">
        <div class="header--menu-background container-fluid p-2">
            <!--collapse btn-->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
                </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <!--collapse btn-->
            <div class="header--menu-font mx-auto">
                <ul class="navbar-nav">
                    <li class="nav-item ms-5">
                        <a class="header--menu-hover text-primary nav-link" aria-current="page" href="{{ path('app_dishes')}}">La carte</a>
                    </li>
                    <li class="nav-item ms-5">
                        <a class="header--menu-hover text-primary nav-link" href="{{ path('app_menus')}}">Nos menus</a>
                    </li>
                    <li class="nav-item ms-5">
                        <a class="header--menu-hover text-primary nav-link" href="{{ path('app_galeries')}}">Galeries</a>
                    </li>
                    <li class="nav-item ms-5">
                        <a class="header--menu-hover text-primary nav-link" href="{{ path('app_chef')}}">Le Chef</a>
                    </li>
                    <li class="nav-item ms-5">
                        <a class="header--menu-hover text-primary nav-link" href="{{ path('app_brigades')}}">La brigade</a>
                    </li>
                </ul>
                </div>
            </div>
            <!--login & book-->
            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
        {% if is_granted('ROLE_ADMIN') %} 
          <a href="{{ path('admin')}}"><div class="header--menu-btn me-md-2 ">Administration</div></a>
          <a href="{{ path('app_logout')}}"><div class="header--menu-btn me-md-2">Se déconnecter</div></a>
          <a href="{{ path('app_reservations')}}" class="text-decoration-none"><div class="header--btn-booking me-md-2">Réserver</div></a>      
        {% elseif is_granted('ROLE_USER') %}
            <a href="{{ path('app_account_users')}}"><div class="header--menu-btn me-md-2 ">Vos réservations</div></a>
          <a href="{{ path('app_logout')}}"><div class="header--menu-btn me-md-2">Se déconnecter</div></a>
          <a href="{{ path('app_reservations')}}" class="text-decoration-none"><div class="header--btn-booking me-md-2">Réserver</div></a>      
        {% else %}
          <a href="{{ path('app_register')}}"><div class="header--menu-btn me-md-2">S'inscrire</div></a>
          <a href="{{ path('app_login')}}"><div class="header--menu-btn me-md-2">Se connecter</div></a>
          <a href="{{ path('app_reservations')}}" class="text-decoration-none"><div class="header--btn-booking me-md-2">Réserver</div></a>      
        {% endif %}
        </div>
            <!--login & book-->
        </div>
    </nav>
    <!--End navbar-->
</header>